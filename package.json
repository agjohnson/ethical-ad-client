{
  "name": "ethical-ad-client",
  "version": "1.7.0",
  "description": "EthicalAds client",
  "main": "dist/client.js",
  "files": ["dist/ethicalads.js"],
  "scripts": {
    "build": "export NODE_OPTIONS='--openssl-legacy-provider' && npm ci && npm run build-min && npm run build-unmin",
    "build-min": "webpack --mode=production --progress --colors",
    "build-unmin": "webpack --mode=development --progress --colors",
    "dev": "webpack-dev-server --mode=development",
    "lint": "prettier -c .",
    "format": "prettier --write .",
    "changelog": "gh-changelog -o readthedocs -r ethical-ad-client -e '' -f CHANGELOG.rst",
    "test": "jest tests/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/readthedocs/ethical-ad-client.git"
  },
  "author": "Read the Docs, Inc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/readthedocs/ethical-ad-client/issues"
  },
  "homepage": "https://github.com/readthedocs/ethical-ad-client#readme",
  "dependencies": {
    "verge": "^1.10.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/preset-env": "^7.20.2",
    "babel-loader": "^8.3.0",
    "css-loader": "^3.6.0",
    "file-loader": "^2.0.0",
    "github-changelog": "git+https://github.com/davidfischer/github-changelog.git#davidfischer/update-deps",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "optimize-css-assets-webpack-plugin": "^5.0.8",
    "prettier": "^2.8.4",
    "sass": "^1.59.3",
    "sass-loader": "^10.4.1",
    "style-loader": "^1.3.0",
    "to-string-loader": "^1.2.0",
    "url-loader": "^0.6.2",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.3",
    "webpack-merge": "^4.2.2"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ],
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs",
          "@babel/plugin-proposal-class-properties"
        ]
      }
    }
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "globals": {
      "__webpack_public_path__": null
    },
    "moduleNameMapper": {
      "\\.s?css$": "<rootDir>/tests/mock.css.js"
    }
  }
}
